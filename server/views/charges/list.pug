extends ../layout.pug

block title
  | Charges

block content
  .card
    .content
      if charges && charges.length
        table.table.table-sm
          thead
            tr
              th ID
              th Stripe ID
              th Created At
          tbody
              for charge in charges
                tr
                  td
                    a(href=charge.url)
                      = charge.id
                  td
                    a(href=charge.stripeUrl target='_blank')
                      = charge.stripeTransactionId
                  td= moment(charge.createdAt).fromNow()
      else
        p.text-muted No charges yet
