extends ../layout.pug

block title
  = user.name

block content

  p
    a(href='/users') ‚Üê Back to users

  .card
    .card-header
      if currentUser.staff || user.id === currentUser.id
        .float-right
          a.btn.btn-outline-primary.btn-sm(href=`${user.url}/edit`)
            i.ti-pencil.mr-2
            | Edit
      h1.page-heading
        = user.name
        if user.staff
          .badge.badge-info.ml-3 STAFF
    .card-block
      p
        strong
          a(href=`mailto:${user.email}`)= user.email
      p
        strong.mr-2 Created:
        span.text-muted= moment(user.createdAt).fromNow()
      if user.bio
        p= user.bio

  .row

    .col
      .card
        .card-header
          h4.title.text-info
            i.ti-calendar.mr-3
            | Events
        .card-block
          p Hello world

    .col
      .card
        .card-header
          h4.title.text-info
            i.ti-receipt.mr-3
            | Charges
        .card-block
          if charges
            for charge in charges
              .row
                .col-4
                  | $
                  = charge.amountDollars
                .col-3= charge.type
                .col-5
                  small= moment(charge.createdAt).fromNow()
          else
            p
              em No charges yet...


    if activities
      .col
        .card
          .card-header
            h4.title.text-primary
              i.ti-menu.mr-3
              | Activities
          .card-block
            include ../activities/_inline-list.pug
