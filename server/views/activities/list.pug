extends ../layout.pug

block title
  | Activities

block content
  .card
    if activities
      table.table.table-sm
        thead
          tr
            th What
            th Who
            th When
        tbody
          for activity in activities
            tr
              td
                a(href=activity.url)
                  = activity.action
                  = ' '
                  = activity.modelName.toLowerCase()
              td
                if activity.userId
                  a(href=`/users/${activity.userId}`)= activity.userId
                else
                  | Unknown
              td= moment(activity.createdAt).fromNow()
