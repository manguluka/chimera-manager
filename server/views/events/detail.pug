extends ../layout.pug

block title
  = event.title

block content
  p
    a(href='/events') ‚Üê Back to events

  .row

    .col-9
      .card
        .header
          h1.title
            if event.draft
              .badge.badge-warning.mr-4 DRAFT
            if currentUser && currentUser.staff
              a.btn.btn-primary.btn-lg.float-right(href=`/events/${event.id}/edit`)
                .fa.fa-pencil.mr-3
                | Edit
            = event.title
            small.ml-2.text-capitalize= event.category
            if currentUser && currentUser.staff
              small.ml-3
                if event.visibility === 'public'
                  i.fa.fa-globe(title='Public')
                else
                  i.ti-user(title='Internal (Member-Only)')

          h5.category.mt-2= event.dateRange
        .content

          p
            strong Attendee Limit:
            = ' '
            =event.attendeeLimit

          .mb-4
            != event.descriptionHtml

    .col-3
      .text-center
        if event.price
          if event.price && event.memberPrice
            h1.mt-0(style=(currentUser ? 'text-decoration: line-through' : ''))
              | $
              = event.priceDollars
            p
              small.text-muted for non-members
            h1.mt-0(style=(currentUser ? '' : 'text-decoration: line-through'))
              | $
              = event.memberPriceDollars
            p
              small.text-muted for members
          else
            h1.mt-0
              | $
              = event.priceDollars
            p
              small.text-muted per attendee
        else
          h1.mt-0 Free!
        if event.materialFee
          p
            em Material fee $#{event.materialFeeDollars}*
        p
          a.btn.btn-success.btn-lg.btn-inverse.btn-block(href=`/events/${event.id}/attend`)
            i.ti-plus.mr-2
            span.text-capitalize Attend #{event.category}
        if event.materialFee
          p.mt-5
            small * Material fees are due on the day of the event and are payable directly to the instructor via cash or check.

        if currentUser && currentUser.staff
          hr.mt-5.mb-5
          p.mb-5
            a.btn.btn-danger(href=`/events/${event.id}/cancel`)
              i.ti-close.mr-2
              | Cancel Event

  if currentUser && currentUser.staff
    .row

      .col-6
        .card
          .header
            .float-right
              a.btn.btn-primary.btn-sm(href=`/events/${event.id}/add-attendee`)
                i.ti-plus.mr-2
                | Add Attendee
            h4.title.text-success
              i.ti-user.mr-3
              | Attendees
          .content
            ul.list-unstyled
              li
                .row
                  .col-2
                    .avatar
                      img(src='https://yt3.ggpht.com/-68PSo29g5Yo/AAAAAAAAAAI/AAAAAAAAAAA/kvVUTsLJs7E/s100-c-k-no-mo-rj-c0xffffff/photo.jpg' width=50 height=50)
                  .col-4
                    strong
                      a(href='/members/1') John Smith
                    br
                    small.text-muted Dabbler
                  .col-3
                    small.text-success(title='Paid via cash')
                      i.fa.fa-money.mr-2
                      | Cash
                  .col-3.text-right
                    a.btn.btn-danger.btn-sm(href=`/events/${event.id}/refund/1`)
                      i.ti-close.mr-2
                      | Refund
              li
                .row
                  .col-2
                    .avatar
                      img(src='https://yt3.ggpht.com/-68PSo29g5Yo/AAAAAAAAAAI/AAAAAAAAAAA/kvVUTsLJs7E/s100-c-k-no-mo-rj-c0xffffff/photo.jpg' width=50 height=50)
                  .col-4
                    strong
                      a(href='/members/1') James Dellemonico
                    br
                    small.text-muted Professional
                  .col-3
                    small.text-success(title='Paid via credit card')
                      i.fa.fa-credit-card.mr-2
                      | Card
                  .col-3.text-right
                    a.btn.btn-danger.btn-sm(href=`/events/${event.id}/refund/1`)
                      i.ti-close.mr-2
                      | Refund
      .col-6
        .card
          .header
            h4.title.text-info
              i.ti-time.mr-3
              | Recent Changes
          .content
            ul.list-unstyled
              li
                .row
                  .col-1.text-danger
                    i.ti-face-sad
                  .col-4
                    a(href='/users/1') Dana Woodman
                  .col-3.text-muted Cancelled
                  .col-4.text-right
                    a(href='/activities/24' title='View this activity')
                      small 3/9/17 @ 2:25pm
              li
                .row
                  .col-1.text-danger
                    i.ti-user
                  .col-4
                    a(href='/users/2') James Smith
                  .col-3.text-muted Removed
                  .col-4.text-right
                    a(href='/activities/23' title='View this activity')
                      small 3/8/17 @ 7:45pm
              li
                .row
                  .col-1.text-success
                    i.ti-user
                  .col-4
                    a(href='/users/2') James Smith
                  .col-3.text-muted Added
                  .col-4.text-right
                    a(href='/activities/18' title='View this activity')
