{
  "name": "chimera-manager",
  "version": "1.0.0",
  "description": "Makerspace management software",
  "main": "webpack.config.js",
  "scripts": {
    "build-frontend": "webpack --progress --colors",
    "format": "prettier --write $(cat prettier.opts) '{frontend,server,scripts,lib,config,test}/**/*.js'",
    "heroku-postbuild": "npm run build-frontend",
    "lint": "eslint --fix server frontend",
    "start": "node server/server",
    "test": "npm run test-server & npm run test-frontend",
    "test-frontend": "NODE_ENV=test karma start",
    "test-server": "NODE_ENV=test mocha 'server/**/*.test.js'",
    "watch": "parallelshell 'npm run watch-test-server' 'npm run watch-test-frontend' 'npm run watch-frontend' 'npm run watch-server'",
    "watch-frontend": "npm run build-frontend -- --watch",
    "watch-server": "nodemon --exec npm start",
    "watch-test": "parallelshell 'npm run watch-test-server' 'npm run watch-test-frontend'",
    "watch-test-server": "npm run test-server -- -w",
    "watch-test-frontend": "npm run test-frontend -- --auto-watch --no-single-run"
  },
  "author": "Dana Woodman <dana@danawoodman.com> (http://danawoodman.com/)",
  "license": "MIT",
  "dependencies": {
    "babel-plugin-module-alias": "1.6.0",
    "bluebird": "3.5.0",
    "body-parser": "^1.17.1",
    "bootstrap": "4.0.0-alpha.6",
    "chalk": "1.1.3",
    "config": "1.25.1",
    "connect-redis": "3.2.0",
    "crypto-js": "3.1.9-1",
    "dollars-to-cents": "1.0.3",
    "express": "^4.15.2",
    "express-async-wrapper": "0.1.0",
    "express-flash": "0.0.2",
    "express-session": "^1.15.2",
    "extract-text-webpack-plugin": "2.1.0",
    "font-awesome": "4.7.0",
    "get-last-date-of-month": "1.0.0",
    "html-webpack-plugin": "2.28.0",
    "humanparser": "1.1.1",
    "isomorphic-fetch": "2.2.1",
    "jquery": "3.2.1",
    "lodash": "4.17.4",
    "logdna": "^1.2.5",
    "marked": "0.3.6",
    "meetup-api": "1.4.12",
    "moment": "^2.18.1",
    "named-routes": "2.0.6",
