    "redux": "3.6.0",
    "redux-actions": "^2.0.2",
    "redux-logger": "^3.0.1",
    "redux-thunk": "2.2.0",
    "select2": "4.0.3",
    "select2-bootstrap-theme": "0.1.0-beta.10",
    "simple-sql-model": "^0.9.0",
